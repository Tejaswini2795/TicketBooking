import java.util.Scanner;

public class forloop {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int t = in.nextInt();
		for (int i = 0; i < t; i++) {
			int a = in.nextInt();
			int b = in.nextInt();
			int n = in.nextInt();
			double res = 0;
			int flag = 0;
			for (int k = 0; k < n; k++) {
				
				for (int j = 0; j <= k; j++) {
					res = res+Math.pow(2, j) * b;
					
					System.out.println((int)res+"+"+Math.pow(2, j)+"*"+b);
				}
				System.out.println("res:"+(int)res);
				res=0;
			}

		}
		in.close();
	}
}
